
      <div class="text-center" style="padding:60px">



	<div class="container">
		<div class="row grid-divider">
		
		<h6> TAGS </h6>

		<br>
		<br>

			<%@postsR.each do |post| %> 

			<div class="col-sm-4">
				<!-- <div class="white-box"> -->
				<div class="col-padding white-box">
					<div>
						
						 <a><%= link_to user_path(post.user_id, post) do %>
                    <h5><%=post.user.username%> </h5>
                    <% end %>
                  </a>

						<a><%= link_to city_post_path(post.city_id, post) do %>
						<h5><%=post.title%></h5>
						<% end %> 
						</a>
						
						<a><%= link_to city_path(post.city_id) do %>
                        <h5><%=post.city.name%></h5>
                        <% end %>
                        </a>

                		<br>
							
						<h5><%= truncate post.content, length: 20	%>

						<br>
						<br>
							<%= link_to "READ MORE", city_post_path(post.city_id, post) %>
					</h5>
					<br>
					</div>

				</div>
			</div>
			<% end %>
		</div>
		</div>
	</div>

	</div>

</section>

		






