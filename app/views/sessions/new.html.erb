<section id="form">
	<div class="login-background">

		<header id="header">
			<div class="container">
				<div class="row">

					<div class="col-md-6 features-leftcol">
						<img src="http://i.imgur.com/aIBTMyG.png" width="350" center alt>
					</div>

					<!-- form section -->
					<div class="col-md-6 features-rightcol">

						<%= form_for @user, url: "/sessions", method: "post" do |f| %>

						<h2>Log In</h2>

						<% flash.each do |key, value| %>
						<div class="alert alert-<%= key %>"><%= value %></div>
						<% end %>
						<%= f.text_field :email, class: "form-control", id: "reg_email", placeholder: "Email" %>

						<%= f.password_field :password, class: "form-control", id: "reg_password", placeholder: "Password" %>

						<%= f.submit "SUBMIT", class: "btn" %>
					</div>
				</div>
			</div>
		</header>
	</div>
	<% end %> 
</section>





