<section id="form">
  <div class="signup-background">

    <header id="header">
      <div class="container">
        <div class="row">

          <div class="col-md-6 features-leftcol">
            <img src="http://i.imgur.com/BHjUSMs.png" width="350" center alt>
          </div>

          <!-- form section -->
          <div class="col-md-6 features-rightcol">

           <%= form_for @user, :html =>{ :multipart => true } do |f| %>

            <h2>Sign Up</h2>

            <div class= "errors" autofocus>
                    <% if @user.errors.any? %>
                    <div id="error_explanation">
                      <h2 class="error-warning">
                        <%= pluralize(@user.errors.count, "error") %> prohibited
                        this owner from being saved:
                      </h2>
                      <% end %>
                      <ul>
                        <% @user.errors.full_messages.each do |msg| %>
                        <li class="error-message"><%= msg %></li>
                        <% end %>
                      </ul>

                      <%= f.text_field :username, class: "form-control", id: "reg_username", placeholder: "User Name" %>

                      <%= f.text_field :email, class: "form-control", id: "reg_email", placeholder: "Email" %>

                      <%= f.password_field :password, class: "form-control", id: "reg_password", placeholder: "Password" %>

                      <h5> CHOOSE A PROFILE PIC </h5>
                      <%= f.file_field :avatar, class: "button" %>

                      <%= f.submit "SUBMIT", class: "button" %>
                    </div>
                    <% end %>
          </div>
        </div>
      </div>
    </header>
  </div>
  
</section>
